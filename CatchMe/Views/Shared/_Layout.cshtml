
@using session = CatchMe.Helpers.UserSession
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Catch ME!</title>
    <link rel="icon" href="@Url.Content("~/favicon.ico?v=2")" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <input type="hidden" id="svrpath" value="@Url.Content("~")" />
    <div class="navbar navbar-light navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Catch ME", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li><a href="@Url.Action("Index","Tasks")" title="Home"><span class="fa fa-15x fa-home"></span> </a></li>
                    <li><a href="@Url.Action("CreateTask","Tasks")" title="create task"><span class="fa fa-15x fa-plus"></span> </a></li>
                   
                    <li><a href="@Url.Action("Index","Stats")" title="Stats"><span class="fa fa-15x fa-line-chart"></span> </a></li>
                    <li class="opensearch"><a href="#"><span class="fa fa-15x fa-search-plus"></span></a></li>
                    <li class="showadvancedsearch" style="display:none">                         
                        
                        @using (Html.BeginForm("SetSearchFilter", "Tasks", FormMethod.Post, new { @class = "navbar-form navbar-left navbar-input-group" }))
                        {
                            @Html.AntiForgeryToken()
                                                <div class="input-group">
                                                    <input type="text" class="form-control" style="background:#ddd;width:300px;" name="keywords" placeholder="Advanced Search enter keywords">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-primary" type="submit"><span class="fa fa-search"></span></button>
                                                    </span>
                                                </div><!-- /input-group -->
                        }
                        
                    </li>

                </ul>                
                <p class="nav navbar-text navbar-right">
                    
                @if (session.Current.IsAdmin)
                {
                    <a href="@Url.Action("Index","Admin")" title="Admin"><span class="fa fa-15x fa-wrench"></span></a>@:&nbsp;
                
                }
                    Hello, @session.Current.Firstname! 

                    @if (!String.IsNullOrWhiteSpace(session.Current.ImpersonatedUser))
                    { 
                        <a href="@Url.Action("Unimpersonate","Admin")">(back)</a>
                    }
                
                </p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

     
            <div id="message"><span class="fa fa-plug"></span></div>            
        

        <input type="hidden" id="who" value="@(session.Current.Username+" "+session.Current.Browser)" />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Catch ME!</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/combodate")
    @RenderSection("scripts", required: false)
    @RenderSection("Modals", required: false)

            
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {

            $('body').on('click', '.opensearch', function () {
                $('.showadvancedsearch').toggle();
            });
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                //$('#message').append('<li><strong>' + htmlEncode(name)+ '</strong>: ' + htmlEncode(message) + '</li>');
                var existingmsg = $('#message').val();
                //alert(message);
                if (name == "assigned")
                {
                    notifyfunc(message,"warn2");
                }
                if (name == "notified")
                {
                    notifyfunc(message, "info2");
                }

                $('#message').html('<span class="text-muted"><span class="fa fa-plug"></span> ' + message + '</span>');
            };
            // Get the user name and store it to prepend to messages.
            // $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.

            $.connection.hub.start().done(function () {
                //$('page').load(function () {
                    // Call the Send method on the hub.
                chat.server.send($('#who').val(), $('#message').val());

                    // Clear text box and reset focus for next comment.
                  //  $('#message').val('').focus();
              //  });
            });
        });
        
        function notifyfunc(message,classname)
        {

            $.notify(message,{

                //className: 'gradientblue',
                // whether to hide the notification on click
                clickToHide: true,
                // whether to auto-hide the notification
                autoHide: true,
                // if autoHide, hide after milliseconds
                autoHideDelay: 20000,
                // show the arrow pointing at the element
                arrowShow: true,
                // arrow size in pixels
                arrowSize: 5,
                position: "bottom-right",
                clickToHide: true,
                className: classname,
                // show animation
                showAnimation: 'slideDown',
                // show animation duration
                showDuration: 400,
                // hide animation
                hideAnimation: 'slideUp',
                // hide animation duration
                hideDuration: 200,
                gap: 0
            }

            );

        }

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}

</body>
</html>
