@model IEnumerable<CatchMe.Models.project>

@{
    ViewBag.Title = "Index";

    var users = ViewBag.Users as List<CatchMe.Models.user>;
}

<h2>Projects</h2>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index")">Home</a></li>
    <li class="active">Projects</li>
</ol>


<style>
   .bigger {
    font-size:1.2em;
    }

    .grey  {
    
    background: #DDDDDD;
    }
</style>
<div class="container">

            <p>
                <a href="@Url.Action("CreateProject", "Admin")" class="btn btn-primary btn-sm"><span class="fa fa-plus-circle"></span> Add Project</a>
            </p>
            <table class="table">
                <tr class="grey">
                    <th style="width:30%">
                        @Html.DisplayNameFor(model => model.name) 
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.description)
                    </th>
                    <th>
                        Delete
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                             <a href="@Url.Action("EditProject", new { id = item.project_id })">@Html.DisplayFor(modelItem => item.name)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            <a href="@Url.Action("DeleteProject","Admin")">[Delete]</a>
                        </td>
                        
                    </tr>
                }

            </table>
  
        
        </div>

